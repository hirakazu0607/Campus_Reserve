<% content_for :title, "プロフィール編集" %>

<div class="row justify-content-center mt-5">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-body">
        <h2 class="card-title text-center mb-4">⚙️ プロフィール編集</h2>

        <%= form_with(model: @user, local: true) do |f| %>
          <%# エラーメッセージの表示 %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <h5><%= pluralize(@user.errors.count, "件のエラー") %>があります</h5>
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%# 名前 %>
          <div class="mb-3">
            <%= f.label :name, "名前", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "山田 太郎" %>
          </div>

          <%# 学籍番号・職員番号 %>
          <div class="mb-3">
            <%= f.label :student_or_staff_number, "学籍番号 / 職員番号", class: "form-label" %>
            <%= f.text_field :student_or_staff_number, class: "form-control", placeholder: "B1234567", disabled: true %>
            <small class="form-text text-muted">※ 学籍番号・職員番号は変更できません</small>
          </div>

          <%# メールアドレス %>
          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "example@email.com" %>
          </div>

          <hr class="my-4">

          <%# パスワード変更セクション %>
          <h5 class="mb-3">🔐 パスワード変更（変更する場合のみ入力）</h5>
          
          <div class="mb-3">
            <%= f.label :password, "新しいパスワード", class: "form-label" %>
            <%= f.password_field :password, class: "form-control", placeholder: "6文字以上（変更しない場合は空欄）" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "もう一度入力してください" %>
          </div>

          <%# 送信ボタン %>
          <div class="d-grid gap-2">
            <%= f.submit "更新する", class: "btn btn-primary" %>
            <%= link_to "キャンセル", root_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
