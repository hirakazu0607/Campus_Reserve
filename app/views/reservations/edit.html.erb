<% content_for :title, "予約編集" %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2>予約編集</h2>
        </div>
        <div class="card-body">
          <%= render "form", reservation: @reservation %>
        </div>
      </div>

      <div class="mt-3">
        <%= link_to "予約詳細に戻る", reservation_path(@reservation), class: "btn btn-secondary" %>
        <%= link_to "予約一覧に戻る", reservations_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
