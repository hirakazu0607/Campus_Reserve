<% content_for :title, "予約詳細" %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h2>予約詳細</h2>
          <% case @reservation.status %>
          <% when "pending" %>
            <span class="badge bg-warning text-dark fs-6">承認待ち</span>
          <% when "approved" %>
            <span class="badge bg-success fs-6">承認済み</span>
          <% when "rejected" %>
            <span class="badge bg-danger fs-6">拒否</span>
          <% when "cancelled" %>
            <span class="badge bg-secondary fs-6">キャンセル</span>
          <% end %>
        </div>
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">施設名:</dt>
            <dd class="col-sm-9">
              <%= link_to @reservation.facility.name, facility_path(@reservation.facility) %>
            </dd>

            <dt class="col-sm-3">場所:</dt>
            <dd class="col-sm-9"><%= @reservation.facility.location %></dd>

            <dt class="col-sm-3">予約者:</dt>
            <dd class="col-sm-9">
              <%= @reservation.user.name %>
              <% if @reservation.user.student? %>
                <span class="badge bg-info">学生</span>
              <% else %>
                <span class="badge bg-primary">教職員</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">開始時刻:</dt>
            <dd class="col-sm-9">
              <strong><%= @reservation.start_time.strftime("%Y年%m月%d日 %H:%M") %></strong>
            </dd>

            <dt class="col-sm-3">終了時刻:</dt>
            <dd class="col-sm-9">
              <strong><%= @reservation.end_time.strftime("%Y年%m月%d日 %H:%M") %></strong>
            </dd>

            <dt class="col-sm-3">利用時間:</dt>
            <dd class="col-sm-9">
              <%= distance_of_time_in_words(@reservation.start_time, @reservation.end_time) %>
            </dd>

            <% if @reservation.purpose.present? %>
              <dt class="col-sm-3">利用目的:</dt>
              <dd class="col-sm-9"><%= simple_format(@reservation.purpose) %></dd>
            <% end %>

            <dt class="col-sm-3">作成日時:</dt>
            <dd class="col-sm-9"><%= @reservation.created_at.strftime("%Y年%m月%d日 %H:%M") %></dd>

            <% if @reservation.updated_at != @reservation.created_at %>
              <dt class="col-sm-3">最終更新:</dt>
              <dd class="col-sm-9"><%= @reservation.updated_at.strftime("%Y年%m月%d日 %H:%M") %></dd>
            <% end %>
          </dl>
        </div>
      </div>

      <div class="mt-3 d-flex gap-2">
        <%= link_to "予約一覧に戻る", reservations_path, class: "btn btn-secondary" %>

        <% if @reservation.user == current_user && @reservation.pending? %>
          <%= link_to "編集", edit_reservation_path(@reservation), class: "btn btn-primary" %>
          <%= button_to "予約をキャンセル", reservation_path(@reservation),
              method: :delete,
              class: "btn btn-danger",
              form: { data: { turbo_confirm: "本当にこの予約をキャンセルしますか？" } } %>
        <% end %>

        <% if current_user.staff? && @reservation.pending? %>
          <%= button_to "承認", approve_reservation_path(@reservation),
              method: :patch,
              class: "btn btn-success" %>
          <%= button_to "拒否", reject_reservation_path(@reservation),
              method: :patch,
              class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
