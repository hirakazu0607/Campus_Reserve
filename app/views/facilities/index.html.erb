<% content_for :title, "施設一覧" %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>🏢 施設一覧</h2>
    <% if current_user.staff? %>
      <%= link_to "新規登録", new_facility_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @facilities.empty? %>
    <div class="alert alert-info">
      まだ施設が登録されていません。
    </div>
  <% else %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @facilities.each do |facility| %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= facility.name %></h5>
              <p class="card-text text-muted">
                <small><%= truncate(facility.description, length: 80) %></small>
              </p>
              <hr>
              <p class="mb-1">
                <strong>📍 場所：</strong><%= facility.location %>
              </p>
              <p class="mb-3">
                <strong>👥 収容人数：</strong><%= facility.capacity %>名
              </p>
              <%= link_to "詳細を見る", facility_path(facility), class: "btn btn-outline-primary btn-sm w-100" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
